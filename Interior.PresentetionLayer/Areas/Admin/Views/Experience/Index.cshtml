@model List<Interior.DomainLayer.Concrete.Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="white_shd full margin_bottom_30">
    <div class="full graph_head">
        <div class="heading1 margin_0">
            <h2>Deneyim</h2>
        </div>
    </div>
    <div class="table_section padding_infor_info">
        <div class="table-responsive-sm">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Alt Başlık</th>
                        <th>İçerik</th>
                        <th>Video Url</th>
                        <th>Sil</th>
                        <th>Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ExperienceID</td>
                            <td>@item.ExperienceTitle</td>
                            <td>@item.ExperienceSubtitle</td>
                            <td>@item.ExperienceDescription</td>
                            <td>@item.ExperienceVideo</td>
                            <td><a asp-controller="Experience" asp-action="DeleteExperience" asp-route-id="@item.ExperienceID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Experience" asp-action="UpdateExperience" asp-route-id="@item.ExperienceID" class="btn btn-outline-warning">Güncelle</a></td>

                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <br />
            <a asp-controller="Experience" asp-action="AddExperience" class="btn btn-outline-success">Ekle</a>
        </div>
    </div>
</div>