@model List<Interior.DomainLayer.Concrete.Header>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="white_shd full margin_bottom_30">
    <div class="full graph_head">
        <div class="heading1 margin_0">
            <h2>Sayfa Başlığı</h2>
        </div>
    </div>
    <div class="table_section padding_infor_info">
        <div class="table-responsive-sm">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Alt Başlık</th>
                        <th>İçerik</th>
                        <th>Resim</th>
                        <th>Sil</th>
                        <th>Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HeaderID</td>
                            <td>@item.HeaderTitle</td>
                            <td>@item.HeaderSubtitle</td>
                            <td>@item.HeaderDescription</td>
                            <td>@item.HeaderImage</td>
                            <td><a asp-controller="Header" asp-action="DeleteHeader" asp-route-id="@item.HeaderID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Header" asp-action="UpdateHeader" asp-route-id="@item.HeaderID" class="btn btn-outline-warning">Güncelle</a></td>

                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <br />
            <a asp-controller="Header" asp-action="AddHeader" class="btn btn-outline-success">Ekle</a>
        </div>
    </div>
</div>


