@model List<Interior.DomainLayer.Concrete.Project>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="white_shd full margin_bottom_30">
    <div class="full graph_head">
        <div class="heading1 margin_0">
            <h2>Projeler</h2>
        </div>
    </div>
    <div class="table_section padding_infor_info">
        <div class="table-responsive-sm">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>İçerik</th>
                        <th>Resim</th>
                        <th>Sil</th>
                        <th>Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProjectID</td>
                            <td>@item.ProjectTitle</td>
                            <td>@item.ProjectDescription</td>
                            <td>@item.ProjectImage</td>
                            <td><a asp-controller="Project" asp-action="DeleteProject" asp-route-id="@item.ProjectID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Project" asp-action="UpdateProject" asp-route-id="@item.ProjectID" class="btn btn-outline-warning">Güncelle</a></td>

                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <br />
            <a asp-controller="Project" asp-action="AddProject" class="btn btn-outline-success">Ekle</a>
        </div>
    </div>
</div>