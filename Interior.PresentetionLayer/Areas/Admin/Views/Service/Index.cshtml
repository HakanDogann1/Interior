@model List<Interior.DomainLayer.Concrete.Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="white_shd full margin_bottom_30">
    <div class="full graph_head">
        <div class="heading1 margin_0">
            <h2>Hizmetler</h2>
        </div>
    </div>
    <div class="table_section padding_infor_info">
        <div class="table-responsive-sm">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>İçerik</th>
                        <th>İkon</th>
                        <th>Sil</th>
                        <th>Güncelle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ServiceID</td>
                            <td>@item.ServiceTitle</td>
                            <td>@item.ServiceDescription</td>
                            <td>@item.ServiceIcon</td>
                            <td><a asp-controller="Service" asp-action="DeleteService" asp-route-id="@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a asp-controller="Service" asp-action="UpdateService" asp-route-id="@item.ServiceID" class="btn btn-outline-warning">Güncelle</a></td>

                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <br />
            <a asp-controller="Service" asp-action="AddService" class="btn btn-outline-success">Ekle</a>
        </div>
    </div>
</div>
